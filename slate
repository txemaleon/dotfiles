# ======================================
# The HYPER key
# ======================================

alias hyper ctrl;alt;cmd
alias duper ctrl;shift;alt;cmd

# Location bindings
bind left:${hyper} ${lefthalf}
bind up:${hyper} ${full}
bind right:${hyper} ${righthalf}
bind down:${hyper} ${center}
bind down:${duper} ${windowcenter}
bind ,:${hyper} throw next
bind .:${hyper} throw next
bind g:${hyper} grid padding:5 0:6,6 1:6,6


# Resize Bindings
#bind r:${hyper} ${leftmost}
#bind g:${hyper} ${rightmost}

# Focus Bindings
bind j:${hyper}		focus left
bind k:${hyper}		focus up
bind l:${hyper}		focus down
bind ;:${hyper}		focus right
# bind Ã±:${hyper}		focus right

# App bindings
# bind e:${hyper} focus ${browser}
# bind u:${hyper} focus ${editor}
# bind x:${hyper} focus 'Xcode'
# bind g:${hyper} focus 'GitHub'
# bind m:${hyper} focus 'Mail'
# bind i:${hyper} focus 'Terminal'
bind space:${hyper} hint ASDFGHJKLQWERTYUIOPCVBN # use whatever keys you want

# Slate
bind backslash:${hyper} relaunch
