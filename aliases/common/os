#!/usr/bin/env zsh

# Show in df only things I care
alias df="df -P -kHl"

# mkdir -p made quicker
alias mkdirp="mkdir -p"

alias path='echo -e ${PATH//:/\\n}'

# Safe recursive remove - sends to trash, blocks dangerous paths
function rmr() {
	local dangerous_paths=("$HOME" "$HOME/" "~" "~/" "/" "/Users" "/Users/")
	for arg in "$@"; do
		local resolved=$(realpath -q "$arg" 2>/dev/null || echo "$arg")
		for danger in "${dangerous_paths[@]}"; do
			local danger_resolved=$(realpath -q "$danger" 2>/dev/null || echo "$danger")
			if [[ "$resolved" == "$danger_resolved" || "$arg" == "$danger" ]]; then
				echo "rmr: refusing to remove '$arg' (dangerous path)"
				return 1
			fi
		done
	done
	trash "$@"
}
alias t='trash'

# bat with colors, no pagination/line numbers (agent-friendly)
alias cat='bat --paging=never --style=plain --tabs=3'
