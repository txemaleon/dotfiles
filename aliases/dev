#!/usr/bin/env zsh

# Dev Shortcuts
alias c="cursor-agent"
alias .='cursor .'
alias c.="cursor ."

alias bump="nu && cam 'chore: Bump versions' && push"

alias brew=" brew"

# Node Shortcuts
alias y="ni"
alias r="nr "
alias rd="r dev"
alias rj="clear; r jest"
alias rjc="clear; r jest --collectCoverageFrom --coverage"
alias rt="clear; r test"
alias rr="clear; nlx"

# Bun Shortcuts
alias b="bun"
alias bx="bunx"
alias bd="bun dev"

# LLMs
alias cc='claude --dangerously-skip-permissions'
alias ccc='cc -c'
alias ccr='cc -r'
alias oc='opencode'
alias occ='opencode -c'

# Now Shortcuts
alias deploy="vercel --prod"
