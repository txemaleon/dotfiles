#!/usr/bin/env zsh

# Dev Shortcuts
alias c="cursor"
alias .="cursor ."
alias c.="cursor ."
alias v="vim"
alias v.="vim ."

alias bump="nu && cam 'chore: Bump versions' && push"

# Node Shortcuts
alias y="ni"
alias r="nr "
alias rd="r dev"
alias rj="clear; r jest"
alias rt="clear; r test"
alias rr="clear; nlx"

# Now Shortcuts
alias deploy="vercel --prod"
