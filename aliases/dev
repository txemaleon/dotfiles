#!/bin/bash

# Dev Shortcuts
alias c="code"
alias c.="code ."
alias code.="code ."
alias s="subl"
alias sublime="subl"
alias artisan="php artisan"

# Node Shortcuts
alias nr="clear; npm run"
alias nd="clear; npm run dev"
alias ns="clear; npm run start"
alias ni="clear; npm install"
alias nis="clear; npm install --save"
alias nid="clear; npm install --save-dev"
alias y="yarn install 2> >(grep -v warning 1>&2)"
alias ys="yarn start"
alias yd="yarn dev"

# Now Shortcuts
alias now="vercel"
alias deploy="vercel -C --prod"
